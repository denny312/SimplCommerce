{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": [
    "config:recommended"
  ],

  "enabledManagers": [
    "dockerfile",
    "github-actions"
  ],

  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "labels": ["breaking"]
    },

    {
      "matchCategories": ["docker"],
      "enabled": true
    },

    {
      "matchDatasources": ["docker"],
      "matchManagers": ["dockerfile"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": false
    }
  ],

  "printConfig": true
}
